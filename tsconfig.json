{
    "compilerOptions": {
      "outDir": "tmp",
      "target": "es5",
      "strict": true,
      "module": "commonjs",
      "lib": [
        "es2017",
        "dom"
      ],
      "rootDir": "src",
      "jsx": "react",
      "sourceMap": true,
      "declaration": true,
      "moduleResolution": "node",
      "noImplicitAny": false,
      "removeComments": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "types": [
        "jest",
        "node"
      ],
  
    },
    "include": ["src/**/*"],
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "webpack.config.js",
      "gulpfile.js",
      "build",
      "dist",
      "tmp",
      "acceptance-tests",
      "webpack",
      "jest",
      "test"
    ]
  }
  
